<mvc:View xmlns:layout="sap.suite.ui.commons.networkgraph.layout" controllerName="iot.planner.assignuserstocategories.controller.Graph" displayBlock="true"
    xmlns="sap.suite.ui.commons.networkgraph"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <m:Page title="{i18n>graph}">

        <t:TreeTable id="treeTable" selectionMode="Multi" rowSelectionChange="onSelect" showNoData="true" rows="{path: '/categoriesLevel0', 
        sorter: {path: 'totalDuration', descending: true},
        parameters: {numberOfExpandedLevels: 4, arrayNames: ['children']}}" visibleRowCount="20" selectionBehavior="Row" enableBusyIndicator="true" rowActionCount="3" sort="onSort">
            <t:columns>
                <t:Column label="{i18n>title}" width="30%">
                    <t:template>
                        <Text value="{title}" change="onChangeCategory"/>
                    </t:template>
                </t:Column>
                <t:Column label="{i18n>catNumber}" width="10%">
                    <t:template>
                        <Text text="{catNumber}"/>
                    </t:template>
                </t:Column>
            </t:columns>
        </t:TreeTable>
    </m:Page>

</mvc:View>