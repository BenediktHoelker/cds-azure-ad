<mvc:View controllerName="iot.planner.components.singleplanningcalendar.controller.MasterDetail"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
    <SplitApp >
        <detailPages>
            <Page id="detailPage" title="{title}" backgroundDesign="Solid" showFooter="true">
                <core:Fragment fragmentName="iot.planner.components.singleplanningcalendar.view.dialogs.CreateEntry" type="XML"/>
                <footer>
                    <Toolbar >
                        <ToolbarSpacer />
                        <Button id="submitButton" text="{i18n>OK}" press="onSubmitEntry" enabled="{= !!${title} &amp;&amp; !!${parentPath} &amp;&amp; !${isAllDay}}" type="Emphasized"/>
                    </Toolbar>
                </footer>
            </Page>
        </detailPages>
        <masterPages>
            <Page id="masterPage" title="Work Items">
                <Toolbar >
                    <DateRangeSelection dateValue="{/dateFilter/start}" secondDateValue="{/dateFilter/end}" change="refreshMasterList" />
                </Toolbar>
                <List id="workItemsList" mode="SingleSelectMaster" selectionChange="onSelectionChange">
                    <dependents>
                        <StandardListItem id="workItemsListItem" description="{title}" title="{= ${path: 'activatedDate', type: 'sap.ui.model.type.DateTime', formatOptions: {pattern: 'HH:mm'}} + ' - ' + ${path: 'completedDate', type: 'sap.ui.model.type.DateTime', formatOptions: {pattern: 'HH:mm'}}}" info="{parts: ['activatedDate', 'completedDate'], formatter: '.formatter.getDuration'}"/>
                    </dependents>
                </List>
            </Page>
        </masterPages>
    </SplitApp>
</mvc:View>