<mvc:View controllerName="iot.planner.components.singleplanningcalendar.controller.MasterDetail"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
    <SplitApp >
        <detailPages>
            <Page id="detailPage" title="{title}" backgroundDesign="Solid" showFooter="true">
                <core:Fragment fragmentName="iot.planner.components.singleplanningcalendar.view.dialogs.CreateEntry" type="XML"/>
                <footer>
                    <Toolbar >
                        <ToolbarSpacer />
                        <Button id="submitButton" text="{i18n>OK}" press="onSubmitEntry" enabled="{= !!${title} &amp;&amp; !!${parentPath} &amp;&amp; !${isAllDay}}" type="Emphasized"/>
                    </Toolbar>
                </footer>
            </Page>
        </detailPages>
        <masterPages>
            <Page id="masterPage" title="Work Items">
                <List items="{/MyWorkItemDrafts}" mode="SingleSelectMaster" selectionChange="onSelectionChange">
                    <StandardListItem title="{title}" description="{= ${path: 'activatedDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'dd.MM.yy'}} + ', ' +  ${path: 'activatedDate', type: 'sap.ui.model.type.DateTime', formatOptions: {pattern: 'HH:mm'}} + ' - ' + ${path: 'completedDate', type: 'sap.ui.model.type.DateTime', formatOptions: {pattern: 'HH:mm'}}}" />
                </List>
            </Page>
        </masterPages>
    </SplitApp>
</mvc:View>