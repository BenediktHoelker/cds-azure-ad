{
  "name": "project-planning",
  "version": "1.0.1",
  "description": "Plan & Track projects",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^12 || ^14"
  },
  "dependencies": {
    "@azure/msal-node": "^1.9.0",
    "@microsoft/microsoft-graph-client": "^3.0.2",
    "@sap/audit-logging": "^5.5.3",
    "@sap/cds": "^5.9.5",
    "@sap/cds-odata-v2-adapter-proxy": "1.8.16",
    "@sap/xsenv": "3.2.2",
    "@sap/xssec": "^3.2.13",
    "@sapmentors/cds-scp-api": "github:sapmentors/cds-scp-api",
    "@ui5/cli": "^2.14.9",
    "azure-devops-node-api": "^11.1.1",
    "cds-dbm": "0.0.36",
    "cds-pg": "0.1.28",
    "cdse": "^1.1.12",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "hdb": "^0.19.2",
    "isomorphic-fetch": "^3.0.0",
    "moment": "^2.29.3",
    "msal": "^1.4.16",
    "passport": "^0.5.2",
    "sap-cf-axios": "^0.3.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@sap/approuter": "^11.0.0",
    "@sap/eslint-plugin-cds": "^2.3.5",
    "@sap/hdi-deploy": "^4.3.3",
    "@sap/ux-specification": "^1.100.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.0.1",
    "sqlite3": "^5.0.8",
    "ui5-middleware-simpleproxy": "^0.8.2",
    "ui5-task-zipper": "^0.4.11"
  },
  "ui5": {
    "dependencies": [
      "ui5-task-zipper",
      "ui5-middleware-simpleproxy"
    ]
  },
  "scripts": {
    "start": "cds run",
    "start:hybrid": "run-p start:srv:hybrid start:approuter start:app",
    "start:all:auth:display": "run-p start:srv start:approuter start:app start:auth display:app",
    "start:srv:hybrid": "cds run --profile test",
    "start:app": "ui5 serve --config=ui5.yaml",
    "start:approuter": "node node_modules/@sap/approuter/approuter.js",
    "start:auth": "open-cli http://localhost:5000",
    "display:app": "ui5 serve -o fiori.html",
    "docker:start:pg": "docker-compose -f docker-compose.yaml up -d",
    "debug": "run-p start:srv start:app",
    "build": "mbt build",
    "lint": "eslint srv && eslint app",
    "build:srv": "mbt module-build -m project-planning-srv -g -r project-planning-db,project-planning-destinations",
    "build:ui": "mbt module-build -m fiori-azdev-workitems,fiori-customers,fiori-single-planning-calendar -g",
    "deploy": "cf deploy mta_archives/%npm_package_name%_%npm_package_version%.mtar -f",
    "release": "npm run build && npm run deploy",
    "copy:db:template": "copyfiles -u 1 -a ./db-deployer-apt/* ./db-deployer-apt/**/* gen/db",
    "deploy:ui": "cf deploy mta_archives/%npm_package_name%_%npm_package_version%.mtar ^ -m project-planning-ui-deployer",
    "deploy:srv": "npm run build:srv && cf deploy -m project-planning-srv",
    "deploy:db": "cf deploy -m project-planning-db-deployer -r project-planning-db",
    "deploy:pg:full": "npx cds-dbm deploy --create-db --load-via full",
    "deploy:pg": "npx cds-dbm deploy --create-db --load-via delta",
    "undeploy": "cf undeploy project-planning --delete-service-keys --delete-services",
    "install:azdev-workitems": "cd app/azdev-workitems && npm i",
    "install:customers": "cd app/customers && npm i",
    "install:projects": "cd app/projects && npm i",
    "install:projects-alp": "cd app/projects-alp && npm i",
    "install:projects-odata-v2": "cd app/projects-odata-v2 && npm i",
    "install:single-planning-calendar": "cd app/single-planning-calendar && npm i",
    "install:users": "cd app/users && npm i",
    "install:workitems-display": "cd app/workitems-display && npm i",
    "install:workitems-alp": "cd app/workitems-alp && npm i",
    "install:workitems-iot": "cd app/workitems-iot && npm i",
    "--postinstall": "run-p install:*"
  },
  "files": [
    "db",
    "srv",
    "app"
  ],
  "cds": {
    "requires": {
      "[development]": {
        "auth": {
          "kind": "dummy-auth"
        }
      },
      "[test]": {
        "auth": {
          "kind": "jwt-auth"
        }
      },
      "[production]": {
        "auth": {
          "kind": "jwt-auth"
        }
      },
      "db": {
        "kind": "database",
        "[development]": {
          "kind": "database"
        },
        "[postgres]": {
          "kind": "database"
        },
        "[test]": {
          "kind": "sqlite"
        },
        "[production]": {
          "kind": "hana"
        }
      },
      "database": {
        "dialect": "plain",
        "impl": "cds-pg",
        "model": [
          "srv"
        ],
        "credentials": {
          "host": "localhost",
          "port": "5432",
          "database": "projplanning4",
          "user": "postgres",
          "password": "postgres",
          "schema": "public"
        }
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "MicrosoftGraphIOTGmbH": {
        "credentials": {
          "destination": "MicrosoftGraphIOTGmbH"
        }
      }
    },
    "migrations": {
      "db": {
        "schema": {
          "default": "public",
          "clone": "_cdsdbm_clone",
          "reference": "_cdsdbm_ref"
        },
        "deploy": {
          "tmpFile": "tmp/_autodeploy.json",
          "undeployFile": "db/undeploy.json"
        },
        "build": {
          "tasks": [
            {
              "use": "node-cf",
              "src": "srv"
            },
            {
              "use": "cds-dbm/dist/build/postgres-cf",
              "for": "postgres-cf",
              "src": "db",
              "options": {
                "deployCmd": "npx cds-dbm deploy --load-via delta --auto-undeploy"
              }
            }
          ]
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}