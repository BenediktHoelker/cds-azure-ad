{
  "name": "project-planning",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@azure/msal-node": "^1.0.1",
    "@microsoft/microsoft-graph-client": "^2.2.1",
    "@sap/approuter": "^6",
    "@sap/audit-logging": "^5.0.0",
    "@sap/cds": "^4.6.5",
    "@sap/cds-odata-v2-adapter-proxy": "^1.5.10",
    "@sap/hana-client": "^2.7.26",
    "@sap/xsenv": "^3.1.0",
    "@sap/xssec": "^3.1.2",
    "@sapmentors/cds-scp-api": "github:sapmentors/cds-scp-api",
    "azure-devops-node-api": "^10.2.1",
    "cdse": "^1.1.12",
    "dotenv": "^8.2.0",
    "express": "^4",
    "isomorphic-fetch": "^3.0.0",
    "msal": "^1.4.8",
    "passport": "^0.4.1",
    "sap-cf-axios": "^0.2.29",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.84.6",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "sqlite3": "^5.0.2",
    "ui5-middleware-livereload": "^0.5.2",
    "ui5-middleware-simpleproxy": "^0.7.1",
    "ui5-task-zipper": "^0.4.2"
  },
  "ui5": {
    "dependencies": [
      "ui5-task-zipper",
      "ui5-middleware-simpleproxy",
      "ui5-middleware-livereload"
    ]
  },
  "scripts": {
    "start": "cds run",
    "start:lcl": "run-p start:srv start:spc start:planner",
    "start:srv": "cds run",
    "start:approuter": "cd app/single-planning-calendar && node node_modules/@sap/approuter/approuter.js",
    "start:planner": "ui5 serve --config=app/planner/ui5.yaml -p 8081",
    "start:spc": "ui5 serve --config=app/single-planning-calendar/ui5.yaml -p 8082",
    "debug": "run-p start:srv start:spc start:planner",
    "build": "mbt build",
    "lint": "eslint srv && eslint app",
    "build:planner": "ui5 build --config=app/planner/ui5.yaml --clean-dest --dest deployer/resources/planner --include-task=generateManifestBundle",
    "build:srv": "mbt module-build -m project-planning-srv -g -r project-planning-db,project-planning-destinations",
    "build:ui": "mbt module-build -m iotprojectplanningazdevworkitems,fiori-customers,iotsingleplanningcalendar -g",
    "deploy": "npm run build && cf deploy mta_archives/%npm_package_name%_%npm_package_version%.mtar -f",
    "deploy:ui": "cf deploy mta_archives/%npm_package_name%_%npm_package_version%.mtar ^ -m project-planning-ui-deployer",
    "deploy:srv": "npm run build:srv && cf deploy -m project-planning-srv",
    "deploy:db": "cf deploy -m project-planning-db-deployer -r project-planning-db"
  },
  "files": [
    "db",
    "srv",
    "app"
  ],
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "MicrosoftGraphBHOPersonalAD": {
        "credentials": {
          "destination": "MicrosoftGraphBHOPersonalAD"
        }
      },
      "MicrosoftGraphIOTGmbH": {
        "credentials": {
          "destination": "MicrosoftGraphIOTGmbH"
        }
      }
    }
  },
  "sapux": [
    "app\\customers",
    "app\\azdev-workitems",
    "app\\single-planning-calendar",
    "app\\workitems"
  ]
}
